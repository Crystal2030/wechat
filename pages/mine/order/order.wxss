/* pages/order/order.wxss */
.headerView {
  z-index: 1;
  top: 0;
  position: fixed;
  background: #fff;
  width: 100%;
  height: 72rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.top-bar-item {
  display: inline-block;
  width: 33%;
  color: gray;
  text-align: center;
  font-size: 28rpx;
}
.top-bar-text{
  font-size: 28rpx;
}
.top-bar-active .top-bar-text{
  width: 100%;
  color: #ff2d50;
  font-size: 28rpx;
  border-bottom: 2px solid #ff2d50;
}

.container {
  overflow: hidden;
  width: 100%;
  height: 100%;
  flex-direction: column;
}

.scrollview-list {
  background: #f3f5f7;
  margin-top: 72rpx;
}

.img {
  height: 200rpx;
  width: 200rpx;
}

/*每个item样式*/

.list {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  padding: 10rpx;
  margin-bottom: 25rpx;
  border-bottom: solid 2px #ebebeb;
  background: white;
}

.item-bottom {
  width: 100%;
  display: flex;
  flex-direction: row;
}

/*右边信息样式*/

.goodsinfo {
  width: 500rpx;
  display: block;
  margin-left: 15rpx;
  flex-direction: column;
}

.goodsname {
  margin-top: 15rpx;
  display: inline-block;
  font-size: 14px;
}

.goodsnum {
  margin-left: 30rpx;
  font-size: 14px;
  margin-top: 15rpx;
}

.item-headerview {
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.status {
  position: absolute;
  right: 15px;
  font-size: 16px;
  width: 100px;
  background: red;
  color: white;
  line-height: 30px;
}

.statusandprice {
  width: 140px;
  flex-direction: column;
  align-items: center;
}

.item-text {
  font-size: 16px;
}

.divLine {
  background: #f3f3f3;
  width: 100%;
  height: 4rpx;
}
.tips{
  flex-direction: row;
  justify-content: center;
  font-size: 16sp;
}

.no-data{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20%;
  height: 500rpx;
}
.no-data image{
  width: 272rpx;
  height: 315rpx;
}
.no-data text{
  margin-top: 40rpx;
  width: 100%;
  font-size: 30rpx;
  text-align: center;
}