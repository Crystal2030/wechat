.course-container {
  display: flex;
  flex-direction: row;
  padding: 0 30rpx;
  padding-top: 20rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #d9dde1;
}

.course-price {
  flex: 0 0 120rpx;
  margin-right: 30rpx;
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  border-radius: 50%;
  background: #46b9d8 url("data:image/png;base64,") no-repeat center center;
  background-size: 95%;
}

.price {
  width: 120rpx;
  height: 120rpx;
  line-height:120rpx;
  font-size: 50rpx;
  text-align: center;
  color: #fff;
}

.course-des {
  display: flex;
  flex-direction: column;
}

.course-title {
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #46b9d8;
}

.course-brief {
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.course-enroll {
  font-size: 20rpx;
  color: #999;
}
